{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "incremental": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@admin/*": ["src/*"],
      "@admin/trpc": ["src/trpc/react.ts"],
      "@admin/navigation": ["src/i18n/navigation"],
      "@qp/config": ["../../packages/config/src/index.ts"],
      "@qp/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": [
    "**/*.cjs",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tailwind.config.ts"
  ]
}
