{
  "name": "quinielas-wl",
  "private": true,
  "engines": {
    "node": ">=22.11.0"
  },
  "packageManager": "pnpm@10.18.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/Justy-IvokA/quinielas.git"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format",
    "db:generate": "pnpm --filter @qp/db exec prisma generate",
    "db:migrate": "pnpm --filter @qp/db exec prisma migrate deploy",
    "db:push": "pnpm --filter @qp/db exec prisma db push",
    "db:reset": "pnpm --filter @qp/db exec prisma migrate reset --force",
    "db:studio": "pnpm --filter @qp/db exec prisma studio",
    "seed": "pnpm --filter @qp/db run seed",
    "pages:build:web": "pnpm --filter @qp/web run build && pnpm --filter @qp/web run pages:build",
    "pages:build:admin": "pnpm --filter @qp/admin run build && pnpm --filter @qp/admin run pages:build",
    "pages:deploy:web": "pnpm --filter @qp/web run pages:deploy",
    "pages:deploy:admin": "pnpm --filter @qp/admin run pages:deploy",
    "worker:deploy": "pnpm --filter @qp/worker run deploy",
    "deploy:all": "pnpm pages:deploy:web && pnpm pages:deploy:admin && pnpm worker:deploy",
    "npm:package_versions": "npm view tailwindcss versions",
    "powershell:adminCache": "Remove-Item -Recurse -Force .\\apps\\admin\\.next",
    "powershell:webCache": "Remove-Item -Recurse -Force .\\apps\\web\\.next"
  },
  "dependencies": {
    "@qp/db": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "turbo": "^2.1.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.44.0"
  }
}
