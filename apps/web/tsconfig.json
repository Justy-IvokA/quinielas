{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "incremental": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "isolatedModules": true,
    "paths": {
      "@qp/api/*": ["packages/api/src/*"],
      "@qp/api": ["packages/api/src/index.ts"],
      "@qp/auth/*": ["packages/auth/src/*"],
      "@qp/auth": ["packages/auth/src/index.ts"],
      "@qp/branding/*": ["packages/branding/src/*"],
      "@qp/branding": ["packages/branding/src/index.ts"],
      "@qp/config/*": ["packages/config/src/*"],
      "@qp/db/*": ["packages/db/src/*"],
      "@qp/db": ["packages/db/src/index.ts"],
      "@qp/scoring/*": ["packages/scoring/src/*"],
      "@qp/ui/*": ["packages/ui/src/*"],
      "@qp/ui": ["packages/ui/src/index.ts"],
      "@qp/utils/*": ["packages/utils/src/*"],
      "@qp/utils": ["packages/utils/src/index.ts"],
      "@web/*": ["apps/web/src/*"]
    }
  },
  "include": [
    "**/*.cjs",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tailwind.config.ts"
  ]
}
