{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "COREPACK_HOME"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true,
      "env": [
        "DATABASE_URL",
        "AUTH_SECRET",
        "SPORTS_PROVIDER",
        "SPORTS_API_KEY",
        "EMAIL_SERVER_HOST",
        "EMAIL_SERVER_PORT",
        "EMAIL_SERVER_USER",
        "EMAIL_SERVER_PASSWORD",
        "EMAIL_FROM",
        "ENABLE_EXPERIMENTAL_COREPACK"
      ]
    },
    "@qp/config#build": {
      "outputs": ["dist/**"],
      "cache": true
    },
    "@qp/utils#build": {
      "dependsOn": ["@qp/config#build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "@qp/db#build": {
      "dependsOn": ["@qp/config#build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "@qp/branding#build": {
      "dependsOn": ["@qp/config#build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "@qp/scoring#build": {
      "dependsOn": ["@qp/config#build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "@qp/ui#build": {
      "dependsOn": ["@qp/config#build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "@qp/auth#build": {
      "dependsOn": ["@qp/config#build", "@qp/db#build", "@qp/utils#build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "@qp/api#build": {
      "dependsOn": ["@qp/auth#build", "@qp/branding#build", "@qp/db#build", "@qp/scoring#build", "@qp/utils#build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**", "reports/**"],
      "dependsOn": ["^build"],
      "cache": false
    },
    "typecheck": {
      "outputs": []
    },
    "format": {
      "cache": false
    }
  }
}
